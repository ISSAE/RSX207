    <span class="kw1">if</span> process.<span class="me1">returncode</span> <span class="sy0">!=</span> <span class="nu0">0</span>:
        <span class="kw1">raise</span> CalledProcessError<span class="br0">&#40;</span>process.<span class="me1">returncode</span><span class="sy0">,</span> cmd_args<span class="br0">&#41;</span>
    <span class="kw1">return</span> out
&nbsp;
<span class="kw1">def</span> psinfo<span class="br0">&#40;</span>pid<span class="sy0">,</span> field<span class="br0">&#41;</span>:
    <span class="kw1">return</span> backquote<span class="br0">&#40;</span><span class="br0">&#40;</span><span class="st0">'ps --no-headers -ww -o %s %s'</span> % <span class="br0">&#40;</span>field<span class="sy0">,</span> pid<span class="br0">&#41;</span><span class="br0">&#41;</span>.<span class="me1">split</span><span class="br0">&#40;</span><span class="br0">&#41;</span><span class="br0">&#41;</span>
&nbsp;
<span class="kw1">def</span> proc<span class="br0">&#40;</span>pid<span class="sy0">,</span> part<span class="br0">&#41;</span>:
    <span class="kw1">return</span> <span class="kw2">open</span><span class="br0">&#40;</span><span class="st0">'/proc/%s/%s'</span> % <span class="br0">&#40;</span>pid<span class="sy0">,</span>part<span class="br0">&#41;</span><span class="br0">&#41;</span>.<span class="me1">read</span><span class="br0">&#40;</span><span class="br0">&#41;</span>.<span class="me1">rstrip</span><span class="br0">&#40;</span><span class="st0">'<span class="es0">\0</span>'</span><span class="br0">&#41;</span>.<span class="me1">split</span><span class="br0">&#40;</span><span class="st0">'<span class="es0">\0</span>'</span><span class="br0">&#41;</span>
&nbsp;
<span class="kw1">def</span> psenviron<span class="br0">&#40;</span>pid<span class="br0">&#41;</span>:
    <span class="kw1">return</span> <span class="kw2">dict</span><span class="br0">&#40;</span>
        x.<span class="me1">split</span><span class="br0">&#40;</span><span class="st0">'='</span><span class="sy0">,</span><span class="nu0">1</span><span class="br0">&#41;</span>
        <span class="kw1">for</span> x <span class="kw1">in</span> proc<span class="br0">&#40;</span>pid<span class="sy0">,</span><span class="st0">'environ'</span><span class="br0">&#41;</span>
        <span class="kw1">if</span> <span class="st0">'='</span> <span class="kw1">in</span> x<span class="br0">&#41;</span>
&nbsp;
<span class="co1"># Change the following to something like</span>
<span class="co1">#</span>
<span class="co1">#   LOG_FILE_NAME='/home/dave/suspend.log'</span>
<span class="co1">#</span>
<span class="co1"># in order to see some debug output</span>
