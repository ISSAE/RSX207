   <span class="br0">&#91;</span> <span class="re5">-f</span> <span class="co1">${intfile}</span> <span class="br0">&#93;</span> <span class="sy0">&amp;&amp;</span> <span class="br0">&#123;</span> <span class="kw2">mv</span> <span class="co1">${intfile}</span> <span class="co1">${intfile}</span>.<span class="co1">${$}</span>.backup <span class="sy0">||</span>  ferr <span class="st0">&quot;Failed backup file <span class="es3">${intfile}</span>&quot;</span>; <span class="br0">&#125;</span>
