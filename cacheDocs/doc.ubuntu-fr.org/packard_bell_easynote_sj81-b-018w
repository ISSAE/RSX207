   <span class="br0">&#91;</span> <span class="re5">-z</span> <span class="co1">${2}</span> <span class="br0">&#93;</span> <span class="sy0">&amp;&amp;</span> ferr <span class="st0">&quot;Syntaxe <span class="es3">${0}</span> &lt; wireless interface &gt; &lt; essid name &gt; [ &lt; secure key &gt; ]&quot;</span>
&nbsp;
   <span class="co0"># ---------------------------------------------------------------------------------------------------------------</span>
   <span class="re2">drtl</span>=<span class="st0">&quot;/etc/rtl8187b/rtl8187b-modified&quot;</span>
   <span class="re2">intfile</span>=<span class="st0">&quot;/etc/network/interfaces&quot;</span>
   <span class="re2">interface</span>=<span class="co1">${1}</span>
