   <span class="kw1">do</span>
   	iwlist wlan0 scan <span class="sy0">|</span> <span class="kw2">grep</span> <span class="st0">&quot;No scan results&quot;</span> <span class="nu0">1</span><span class="sy0">&gt;/</span>dev<span class="sy0">/</span>null <span class="sy0">||</span> <span class="kw3">break</span>
   	<span class="re2">timeout</span>=<span class="co1">${timeout}</span><span class="re5">-1</span>
